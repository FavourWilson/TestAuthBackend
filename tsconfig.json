{
    "compilerOptions":{
       "lib": [
         "es6"
      ],
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "src",
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
    },
    "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    },
    "require": [
      "tsconfig-paths/register"
    ]
  },
    "include": ["src/**/*"]
}